{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "msedge",
      "request": "launch",
      "name": "Client",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server [development]",
      "console": "integratedTerminal",
      "args": ["dev"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "linux": {
        "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs"
      },
      "osx": {
        "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs"
      },
      "serverReadyAction": {
        "killOnServerStop": true,
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
      "windows": {
        "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server [production]",
      "args": ["start"],
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "linux": {
        "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs"
      },
      "osx": {
        "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs"
      },
      "serverReadyAction": {
        "killOnServerStop": true,
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
      "windows": {
        "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Fullstack [development]",
      "configurations": ["Debug Server [development]", "Client"]
    },
    {
      "name": "Debug Fullstack [production]",
      "configurations": ["Debug Server [production]", "Client"]
    }
  ]
}
