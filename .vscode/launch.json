{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server [development]",
      "args": ["dev"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "linux": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      },
      "osx": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      },
      "serverReadyAction": {
        "killOnServerStop": true,
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
      "windows": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server [production]",
      "args": ["start"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "linux": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      },
      "osx": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      },
      "serverReadyAction": {
        "killOnServerStop": true,
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
      "windows": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Fullstack [development]",
      "args": ["dev"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "linux": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      },
      "osx": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      },
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
      "windows": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Fullstack [production]",
      "args": ["start"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "linux": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      },
      "osx": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      },
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
      "windows": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      }
    }
  ]
}
