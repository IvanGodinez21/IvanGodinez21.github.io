{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": ["next.config.js", "postcss.config.js"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "root": true,
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "semi": ["warn", "always"]
  }
}
